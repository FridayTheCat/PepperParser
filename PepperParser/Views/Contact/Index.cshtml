@using PepperParser.Domain.Implementation
@model Feedback

@if((string)TempData["ShowSuccses"] == "Bad")
	{
		<script>alert('Произошла ошибка почтового сервиса!')</script>
	}

@{
	ViewBag.Title = "Обратная связь";
	ViewBag.Text = "Предложения и замечания";
}

<div class="row">
	<div class="col-6 col-12-medium">
		<section>
			<form method="post" asp-action="SendFeedback">
				<div class="row gtr-50">
					<div class="col-6 col-12-small">
						<label asp-for="Name"></label>
						<input asp-for="Name"/>
						<span asp-validation-for="Name"></span>
					</div>
					<div class="col-6 col-12-small">
						<label  asp-for="Email"></label>
						<input asp-for="Email"/>
						<span asp-validation-for="Email"></span>
					</div>
					<div class="col-12">
						<label asp-for="Message"></label>
						<textarea asp-for="Message" rows="4"></textarea>
						<span asp-validation-for="Message"></span>
					</div>
					<div class="col-12">
						<ul class="actions">
							<li><input type="submit" class="style1" value="Send"/></li>
							<li><input type="reset" class="style2" value="Reset" /></li>
						</ul>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>