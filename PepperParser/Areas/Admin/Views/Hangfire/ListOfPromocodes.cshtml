@using PepperParser.Domain

@if(Model.Count == 0)
{
    <div class="big-home-text">
        <h2 style="text-align: center">В настоящее время нет актуальных промокодов :(</h2>
    </div>
}

<div>
    <form method="post" action="~/Admin/Hangfire/DeletePromo">
        <label>Id:</label>
        <input type="number" name="id" />
        <input type="submit" class="style1" value="Delete" />
    </form>
</div>

<div>
    <form method="post" action="~/Admin/Hangfire/DeleteAllPromo">
        <input type="submit" class="style1" value="Delete All Promocodes" />
    </form>
</div>


<div class="grid-box">
    <h3 class="big-promo-text">ID</h3>
    <p></p>
    <h3 class="big-promo-text">Name</h3>
    <h3 class="big-promo-text">Agregator</h3>
    <h3 class="big-promo-text">Code</h3>
</div>
<p></p>
<div>
    @foreach (var promoc in Model)
    {
        <div class="grid-box">
            <h3 class="big-promo-text">@promoc.Id</h3>
            <p></p>
            <h3 class="big-promo-text">@promoc.Name</h3>
            <h3 class="big-promo-text">@promoc.Agregator</h3>
            <h3 class="big-promo-text">@promoc.Code</h3>
        </div>
        <p></p>
    }
</div>